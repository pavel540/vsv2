#!/bin/sh
set -e

case "$1" in
    configure)
        # Добавление Trivy репозитория
        if [ ! -f /etc/apt/sources.list.d/trivy.list ]; then
            apt-get install -y wget apt-transport-https gnupg lsb-release
            wget -qO - https://aquasecurity.github.io/trivy-repo/deb/public.key | apt-key add -
            echo "deb https://aquasecurity.github.io/trivy-repo/deb $(lsb_release -sc) main" | tee -a /etc/apt/sources.list.d/trivy.list
            apt-get update
            apt-get install -y trivy
        fi

        # Создание конфигурационного файла
        mkdir -p /etc/docker-vulnerability-scanner
        if [ ! -f /etc/docker-vulnerability-scanner/config.yaml ]; then
            cat > /etc/docker-vulnerability-scanner/config.yaml << EOF
web_interface:
  host: 0.0.0.0
  port: 5000
  secret_key: $(openssl rand -hex 32)
trivy:
  timeout: 300
  skip_update: false
EOF
        fi

        # Настройка прав доступа
        chown -R root:root /usr/lib/docker-vulnerability-scanner
        chmod -R 755 /usr/lib/docker-vulnerability-scanner

        # Перезапуск и включение сервиса
        systemctl daemon-reload
        systemctl enable docker-vulnerability-scanner
        systemctl restart docker-vulnerability-scanner
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

exit 0 