# Конфигурация Docker Vulnerability Scanner

# Настройки веб-интерфейса
web_interface:
  # Адрес для прослушивания (0.0.0.0 для всех интерфейсов)
  host: 0.0.0.0
  # Порт веб-интерфейса
  port: 5000
  # Секретный ключ для Flask (замените на случайную строку)
  secret_key: change-this-to-a-random-string
  # Включить режим отладки (false для production)
  debug: false

# Настройки Trivy
trivy:
  # Таймаут сканирования в секундах
  timeout: 300
  # Пропустить обновление базы данных уязвимостей
  skip_update: false
  # Уровни серьезности для сканирования
  severity_levels:
    - HIGH
    - CRITICAL
  # Типы уязвимостей для сканирования
  vuln_types:
    - os
    - library

# Настройки Docker
docker:
  # Таймаут подключения к Docker daemon
  timeout: 30
  # Версия API Docker
  api_version: auto
  # Путь к Unix socket (для локального подключения)
  unix_socket: unix:///var/run/docker.sock

# Настройки логирования
logging:
  # Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
  level: INFO
  # Путь к файлу логов
  file: /var/log/docker-vulnerability-scanner/scanner.log
  # Максимальный размер файла логов (в байтах)
  max_size: 10485760  # 10MB
  # Количество файлов для ротации 